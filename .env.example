# Environment Configuration for Money-Health App

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/money_health_db
TEST_DATABASE_URL=sqlite:///./test.db

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SSL/HTTPS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem
SSL_CA_PATH=ssl/ca.pem
SSL_VERIFY_MODE=CERT_OPTIONAL
AUTO_GENERATE_SSL_CERT=true

# CORS Configuration
CORS_ALLOW_ORIGINS=https://localhost:3000,https://localhost:8443,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# Environment
ENVIRONMENT=development

# Security Configuration
ENFORCE_HTTPS=true
RATE_LIMIT_PER_MINUTE=100
SECURITY_AUDIT_ENABLED=true

# External Services (optional)
# PAYMENT_SERVICE_URL=https://api.stripe.com
# EMAIL_SERVICE_URL=https://api.sendgrid.com
# STORAGE_SERVICE_URL=https://api.cloudinary.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Server Configuration
SERVER_HOST=0.0.0.0
HTTP_PORT=8000
HTTPS_PORT=8443
