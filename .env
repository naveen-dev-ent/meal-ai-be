# Backend Environment Variables

# Database Configuration
DATABASE_URL=sqlite:///./data/app.db
# For PostgreSQL: postgresql://username:password@localhost:5432/money_health_db
# For MySQL: mysql://username:password@localhost:3306/money_health_db

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Money-Health Food App
VERSION=1.0.0
DESCRIPTION=A comprehensive food management platform for personalized meal planning and health tracking

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:19006", "http://localhost:8081"]

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE_SECONDS=3600

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000

# Email Configuration (optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development/Production
ENVIRONMENT=development
DEBUG=True

# Health Check
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
